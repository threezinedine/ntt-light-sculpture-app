	"version": "0.2.0",
	"configurations": [
		{
			"name": "Application",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/app/application.py",
			"console": "integratedTerminal",
			"python": "${workspaceFolder}/app/venv/Scripts/python.exe"
		},
		{
			"name": "Application Tests",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/app/venv/Scripts/pytest.exe",
			"args": ["-k", "test_modify_threshold_then_binary_image_is_updated"],
			"cwd": "${workspaceFolder}/app",
			"python": "${workspaceFolder}/app/venv/Scripts/python.exe",
			"console": "integratedTerminal"
		}
	]
}
